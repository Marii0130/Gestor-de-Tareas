extends layout

block contenido
  style.
    .botones {
      display: flex;
      gap: 1rem;
      margin-bottom: 1.5rem;
    }
    .botones a {
      background-color: #007bff;
      color: white;
      padding: 0.6rem 1.2rem;
      text-decoration: none;
      border-radius: 5px;
      font-weight: bold;
      transition: background-color 0.3s ease;
      display: inline-block;
    }
    .botones a:hover {
      background-color: #0056b3;
    }

    table {
      width: 100%;
      border-collapse: collapse;
      margin-top: 1rem;
      background-color: #fff;
    }

    th, td {
      border: 1px solid #ccc;
      padding: 0.8rem;
      text-align: center;
    }

    thead tr {
      background-color: #f5f5f5;
    }

    tbody tr:hover {
      background-color: #eef6ff;
      cursor: pointer;
    }

    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      top: 0;
      left: 0;
      width: 100vw;
      height: 100vh;
      background-color: rgba(0, 0, 0, 0.6);
      justify-content: center;
      align-items: center;
    }

    .modal-contenido {
      background-color: white;
      padding: 2rem;
      border-radius: 10px;
      max-width: 700px;
      width: 90%;
      position: relative;
    }

    .modal-cerrar {
      position: absolute;
      top: 1rem;
      right: 1rem;
      cursor: pointer;
      font-size: 1.2rem;
      font-weight: bold;
    }

    .indicadores {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: 1rem;
      margin-top: 1rem;
    }

    .indicador {
      background-color: #f2f2f2;
      padding: 2rem;
      border-radius: 12px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
      text-align: center;
      font-size: 1.2rem;
    }

  h1 Reportes

  .botones
    a(href="/reportes/ingresos") Ingresos por Fecha
    a(href="/reportes/reparaciones") Reparaciones Realizadas
    a(href="/reportes/ganancias") Costos y Ganancias

  h2 Lista de reportes guardados

  if reportes.length === 0
    p No hay reportes guardados.
  else
    table
      thead
        tr
          th Tipo de Reporte
          th Rango
          th Período
      tbody
        each reporte in reportes
          - const parametros = JSON.parse(reporte.parametros || '{}');
          - const periodo = parametros.periodo || parametros.semana || parametros.mes || '—';
          tr(data-resumen=reporte.resumen, data-tipo=reporte.tipo, data-id=reporte.id, onclick='mostrarModal(this)')
            td= reporte.tipo
            td= parametros.tipo || '—'
            td= periodo

  // Modal
  .modal#modal
    .modal-contenido
      span.modal-cerrar(onclick="cerrarModal()") ✖
      h3 Detalles del Reporte
      .indicadores#indicadores
        // generado dinámicamente
      br
      button(onclick="cerrarModal()") Cerrar

  script.
    function mostrarModal(fila) {
      const resumen = JSON.parse(fila.dataset.resumen || '{}');
      const contenedor = document.getElementById('indicadores');
      contenedor.innerHTML = '';

      for (const clave in resumen) {
        const div = document.createElement('div');
        div.className = 'indicador';

        // Formatear clave con mejor legibilidad, sin dañar caracteres especiales
        const titulo = clave
          .replace(/([A-Z])/g, ' $1') // Separar camelCase
          .replace(/_/g, ' ')         // Separar snake_case
          .replace(/^./, l => l.toUpperCase()) // Capitaliza solo la primera letra
          .replace('Senas', 'Señas')          // tilde correcto

        const valorFormateado = typeof resumen[clave] === 'number'
          ? `$${resumen[clave].toLocaleString('es-AR')}`
          : resumen[clave];

        div.innerHTML = `<strong>${titulo}:</strong><br>${valorFormateado}`;
        contenedor.appendChild(div);
      }

      document.getElementById('modal').style.display = 'flex';
    }

    function cerrarModal() {
      document.getElementById('modal').style.display = 'none';
    }
